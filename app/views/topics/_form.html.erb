<%= simple_form_for [@board,@topic], html: { class: "form-horizontal" } do |f| %>
  <fieldset>
    <% if content_for?(:title) %>
      <legend><%= yield(:title) %></legend>
    <% end %>
    <%= hidden_field_tag "parent_id", params[:parent_id] %>
    <%= f.input :subject %>
    <%= f.input :body, input_html: { class: 'span5' } %>
    <div class="form-actions">
      <%= f.submit class: 'btn btn-primary'%>
    </div>
  </fieldset>
<% end %>